<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_events_intro"
                android:focusableInTouchMode="false">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contenido"
            android:layout_centerVertical="false"
            android:layout_centerHorizontal="true">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewBanner"
            android:src="@drawable/logo_events_intro"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/logo"/>


    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayoutBanner"
            android:layout_below="@id/imageViewBanner"
            android:layout_centerVertical="false"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/box_titol"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/logo"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proximo_evento"
                android:id="@+id/textViewTituloEvent"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textIsSelectable="false"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>




</RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/relativeLayoutBanner"
            android:id="@+id/relativeLayoutBackGround">
        <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:id="@+id/buttonAnarFesta"
                android:background="@drawable/button_reservar"
                android:layout_below="@+id/relativeLayoutBackGround"
                android:layout_centerHorizontal="true"
                android:contentDescription="buttonReservar"/>
    </RelativeLayout>

</RelativeLayout>