<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="cat.andreurm.blacklist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        <activity
            android:name=".activities.PromoterCodeActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".activities.RegisterActivity"
                android:label="@string/title_activity_register_ok"
                android:windowSoftInputMode="stateHidden|adjustPan" >
        </activity>
        <activity
                android:name=".activities.LoginActivity"
                android:label="@string/title_activity_register_ok"
                android:windowSoftInputMode="stateHidden|adjustPan" >
        </activity>


        <activity
                android:name=".activities.RegisterOkActivity"
                android:label="@string/title_activity_register_ok"
                android:windowSoftInputMode="stateHidden|adjustPan" >
        </activity>

        <activity
            android:name="cat.andreurm.blacklist.activities.EventsIntroActivity"
            android:label="@string/title_activity_events_intro" >
        </activity>

        <activity
            android:name="cat.andreurm.blacklist.activities.EventsActivity"
            android:label="@string/title_activity_events" >
        </activity>
        <activity
            android:name="cat.andreurm.blacklist.activities.MessagesActivity"
            android:label="@string/title_activity_messages" >
        </activity>
        <activity
            android:name="cat.andreurm.blacklist.activities.InviteActivity"
            android:label="@string/title_activity_invite" >
        </activity>
        <activity
            android:name="cat.andreurm.blacklist.activities.CodeActivity"
            android:label="@string/title_activity_code" >
        </activity>
        <activity
            android:name="cat.andreurm.blacklist.EventInfoActivity"
            android:label="@string/title_activity_event_info" >
        </activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />

    <compatible-screens>
        <!-- all small size screens -->
        <screen
            android:screenDensity="ldpi"
            android:screenSize="small" />
        <screen
            android:screenDensity="mdpi"
            android:screenSize="small" />
        <screen
            android:screenDensity="hdpi"
            android:screenSize="small" />
        <screen
            android:screenDensity="xhdpi"
            android:screenSize="small" />
        <!-- all normal size screens -->
        <screen
            android:screenDensity="ldpi"
            android:screenSize="normal" />
        <screen
            android:screenDensity="mdpi"
            android:screenSize="normal" />
        <screen
            android:screenDensity="hdpi"
            android:screenSize="normal" />
        <screen
            android:screenDensity="xhdpi"
            android:screenSize="normal" />
    </compatible-screens>

</manifest>